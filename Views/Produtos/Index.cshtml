@model IEnumerable<ProdutosModel>

@{
	ViewData["title"] = "Página principal";
}
<div class="container">
     <div class="d-flex justify-content-between align-items-center mb-5">
     <h1>Produtos</h1>
     <a class="btn btn-success mx-2" asp-controller="Produtos" asp-action="Cadastrar">Cadastrar novo produto</a>
     </div>  
    @if (TempData["MensagemSucesso"] != null)
    {
            <div class="alert alert-success bg-success text-light" role="alert">
            @TempData["MensagemSucesso"]
            </div>
    }
<table id="Produtos" class="table table-hover table-dark">
     <thead>
    <tr>
      <th scope="col">Nome</th>
      <th scope="col">Descrição</th>
      <th scope="col">Quantidade</th>
      <th scope="col">Categoria</th>
      <th scope="col">Data de Cadastro</th>
      <th scope="col"></th>
    </tr>
  </thead>
  <tbody>
        @if (Model != null)
        {
            @foreach(var produto in Model)
            {
                <tr>
                <th scope="row">@produto.Nome</th>
                <td>@produto.Descricao</td>
                <td>@produto.Quantidade</td>
                <td>@produto.Categoria</td> 
                <td>@produto.DataCadastro</td> 
                <td>
                   <a class="btn btn-primary mx-2" asp-controller="Produtos" asp-action="Editar" asp-route-id="@produto.ProdutoId">Editar</a>
                   <a class="btn btn-danger mx-2" asp-controller="Produtos" asp-action="Excluir" asp-route-id="@produto.ProdutoId">Excluir</a>
               </td>
                </tr>
            }
        }
  </tbody>
</table>
</div>
